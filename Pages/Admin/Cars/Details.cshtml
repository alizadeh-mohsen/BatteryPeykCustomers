@page
@using BatteryPeykCustomers.Helpers
@model BatteryPeykCars.Pages.Admin.Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<script type="text/javascript">
    function copy(phone) {
        navigator.clipboard.writeText("https://BatteryPeyk.com/vip.html?m=" + phone);
    }
</script>

<p>
</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.car.Make</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">
            @Model.car.Battery
        </h6>
        <p class="card-text">
            <table class="table">
                <tr>
                    <td class="text-center"><strong>تاریخ خرید</strong></td>
                    <td class="text-center">
                        @Model.car.PurchaseDate.ToPersianDate()
                    </td>
                </tr>
                <tr>
                    <td class="text-center"><strong>گارانتی</strong></td>
                    <td class="text-center">@Model.car.Guaranty</td>
                </tr>
                <tr>
                    <td class="text-center"><strong>طول عمر</strong></td>
                    <td class="text-center">@Model.car.LifeExpectancy</td>
                </tr>
                <tr>
                    <td class="text-center"><strong>زمان تعویض</strong></td>
                    <td class="text-center">
                        @Model.car.ReplaceDate.ToPersianDate()
                    </td>
                </tr>

                <tr>
                    <td class="text-center"><strong>توضیحات</strong></td>
                    <td class="text-center">@Model.car.Comments</td>
                </tr>
            </table>

        </p>
        <a class="btn btn-info ml-2" asp-page="Edit" asp-route-id="@Model.car.Id">ویرایش</a>
        <a class="btn btn-success ml-2" href='javascript:history.go(-1)'>بازگشت</a>

    </div>
</div>

