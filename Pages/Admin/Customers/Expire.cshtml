@page
@using BatteryPeykCustomers.Helpers
@model BatteryPeykCustomers.Pages.Admin.Customers.ExpireModel

@{
    ViewData["Title"] = "Expire";
}

<h1>مشتریانی که نیاز به تعویض باتری دارند</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                نام
            </th>
            <th>
                تلفن
            </th>
            <th>
                ماشین
            </th>

            <th>
                باتری
            </th>
            <th>
                تاریخ انقضا
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.vm)
        {
            <tr>
                <td>
                    <a asp-page="Details" asp-route-id="@item.Id" style="text-decoration:none">@item.Name</a>
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.Make
                </td>
                <td>
                    @item.Battery
                </td>
                <td>
                    @item.ReplaceDate.ToPersianDate()
                </td>
            </tr>
        }
    </tbody>
</table>
