@page
@model BatteryPeykCustomers.Pages.Admin.Customers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-2">
                تلفن
                <input asp-for="vm.Phone" class="form-control" />
                <span asp-validation-for="vm.Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                نام
                <input asp-for="vm.Name" class="form-control" />
                <span asp-validation-for="vm.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                آدرس
                <input asp-for="vm.Address" class="form-control" />
                <span asp-validation-for="vm.Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                ماشین
                <select asp-for="vm.VehicleId" class="form-select" asp-items="ViewBag.VehicleId"></select>

            </div>
            <div class="form-group mb-2">
                باتری
                <select asp-for="vm.CompanyId" class="form-select" asp-items="ViewBag.CompanyId"></select>

            </div>   <div class="form-group mb-2">
                آمپر
                <select asp-for="vm.AmperId" class="form-select" asp-items="ViewBag.AmperId"></select>

            </div>
            <div class="form-group mb-2">
                توضیحات
                <textarea asp-for="vm.Comments" class="form-control" ></textarea>
                <span asp-validation-for="vm.Comments" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="ذخیره" class="btn btn-info mt-2" />
                <a asp-page="./Index" class="btn btn-success mt-2">بازگشت</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
