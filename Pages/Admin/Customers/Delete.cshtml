@page
@model BatteryPeykCustomers.Pages.Admin.Customers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Name
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Phone
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Address
        </dd>
        <dt class="col-sm-2">
            Car
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Car
        </dd>
        <dt class="col-sm-2">
            Battery
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Battery
        </dd>
        <dt class="col-sm-2">
            PurchaseDate
        </dt>
        <dd class="col-sm-10">
            @Model.ToPersianDate(@Model.Customer.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            Guaranty
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Guaranty
        </dd>
        <dt class="col-sm-2">
            Life Expectancy
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.LifeExpectancy
        </dd>
        <dt class="col-sm-2">
            Comments
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Comments
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Customer.Phone" />
        <input type="submit" value="حذف" class="btn btn-danger" /> 
        <a class="btn btn-success" asp-page="./Index">بازگشت</a>
    </form>
</div>
