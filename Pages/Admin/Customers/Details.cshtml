@page
@model BatteryPeykCustomers.Pages.Admin.Customers.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <dl class="row">
        <dt class="col-sm-2">
            Link
        </dt>
        <dd class="col-sm-10">
            <input class="form-control" disabled  value="http://BatteryPeyk.com/vip.html?m=@Model.Customer.Phone" />
            @*<span>https://batterypeyk.com/VIP.html</span>*@
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Name
        </dd>
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Phone
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Address
        </dd>
        <dt class="col-sm-2">
            Car
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Car
        </dd>
        <dt class="col-sm-2">
            Battery
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Battery
        </dd>
        <dt class="col-sm-2">
            PurchaseDate
        </dt>
        <dd class="col-sm-10">
            @Model.ToPersianDate(@Model.Customer.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            Guaranty
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Guaranty
        </dd>
        <dt class="col-sm-2">
            Life Expectancy
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.LifeExpectancy
        </dd>
        <dt class="col-sm-2">
            Replace Date
        </dt>
        <dd class="col-sm-10">
            @Model.ToPersianDate(@Model.Customer.ReplaceDate)
        </dd>
        <dt class="col-sm-2">
            Battery Age
        </dt>
        <dd class="col-sm-10">
            @Model.BatteryAge(@Model.Customer.PurchaseDate)
        </dd>
        <dt class="col-sm-2">
            Comments
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.Comments
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" asp-page="./Edit" asp-route-id="@Model.Customer?.Id">Edit</a>
    <a class="btn btn-success" asp-page="./Index">بازگشت</a>
</div>
