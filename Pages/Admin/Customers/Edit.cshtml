@page
@model BatteryPeykCustomers.Pages.Admin.Customers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group mb-2">
                شرکت
                <input asp-for="Customer.IsCompany"  class="form-check-input" type="checkbox">
            </div>
            <div class="form-group mb-2">
                تلفن
                <input asp-for="Customer.Phone" class="form-control" />
                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                نام
                <input asp-for="Customer.Name" class="form-control" />
                <span asp-validation-for="Customer.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                آدرس
                <textarea asp-for="Customer.Address" class="form-control" ></textarea>
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="ذخیره" class="btn btn-info mt-2" />
                <a asp-page="./Index" class="btn btn-success mt-2">بازگشت</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
