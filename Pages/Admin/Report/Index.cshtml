@page
@model BatteryPeykCustomers.Pages.Admin.Report.IndexModel
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/persianDatepicker-default.css" />

<div class="row">
    <div class="col-sm-4 mb-3">
        <form method="get">
            <div class="form-group mb-3">
                از تاریخ
                <input type="text" id="input1" class="form-control" />
                <input style="display:none" type="text" id="from" asp-for="From" />
            </div>
            <div class="form-group mb-2">
                تا تاریخ
                <input type="text" id="input2" class="form-control" />
                <input style="display:none" type="text" id="to" asp-for="To" />
            </div>
            <input class="btn btn-primary" type="submit" value="گزارش" />
        </form>
    </div>
</div>
<div class="d-flex flex-row justify-content-center mb-3">
    <div class="ms-3">
        از تاریخ:
        <span>
            @(@Model.From != null ? @Model.From.Value.ToShortDateString() : "")
        </span>
    </div>
    <div>
        تا تاریخ:
        <span>
            @(@Model.To != null ? @Model.To.Value.ToShortDateString() : "")
        </span>
    </div>
</div>
<div class="row mx-auto mb-3">
    <div class="card">
        <div class="card-body">
            <p class="card-text">
                تعداد باتری فروخته شده:
                <span>@Model.vm.TotalBatterySold</span>
                
            </p>
            <p>
                جمع درآمد:
                <span>@Model.vm.TotalProfit.ToString("N0")</span>
            </p>
            <p>
                جمع هزینه ها:
                <span>@Model.vm.TotalLoss.ToString("N0")</span>
            </p>
            <p>
                سود:
                <span>@Model.vm.Profit.ToString("0,000")</span>
            </p>


        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script src="~/js/persianDatepicker.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#input1, #input2").persianDatepicker(
                    {
                        cellWidth: 30,
                        cellHeight: 30,
                        fontSize: 14,

                        onSelect: function () {

                            let from = $("#input1").attr("data-gdate");
                            let to = $("#input2").attr("data-gdate");
                            $("#from").val(from);
                            $("#to").val(to);
                        }
                    }
                );
            });
        </script>

    }
}


