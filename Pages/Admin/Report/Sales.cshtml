@page
@model BatteryPeykCustomers.Pages.Admin.Report.SalesModel
@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/persianDatepicker-default.css" />

<div class="container">
    <div class="row">
        <div class="col-sm-4 mb-3">
            <form method="get">
                <div class="form-group mb-3">
                    از تاریخ
                    <input type="text" id="input1" class="form-control" />
                    <input style="display:none" type="text" id="from" asp-for="From" />
                </div>
                <div class="form-group mb-2">
                    تا تاریخ
                    <input type="text" id="input2" class="form-control" />
                    <input style="display:none" type="text" id="to" asp-for="To" />
                </div>
                <input class="btn btn-primary" type="submit" value="گزارش" />
            </form>
        </div>
    </div>
    <div class="d-flex flex-row justify-content-center mb-3">
        <div class="ms-3">
            از تاریخ:
            <span>
                @(@Model.From != null ? @Model.From.Value.ToShortDateString() : "")
            </span>
        </div>
        <div>
            تا تاریخ:
            <span>
                @(@Model.To != null ? @Model.To.Value.ToShortDateString() : "")
            </span>
        </div>
    </div>
    <div class="row mb-3">
        <table class="table table-sm table-striped mx-2">

            <thead>
                <tr>
                    <th>
                        باتری
                    </th>
                    <th>
                        مشتری
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cars)
                {
                    <tr>
                        <td>
                            @item.Battery
                        </td>
                        <td>
                            <a asp-page="/Admin/Cars/Index" asp-route-customerId="@item.CustomerId" class="text-decoration-none text-info">@item.Customer.Name </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="d-flex flex-row justify-content-center">

            تعداد فروش:


            @Model.Cars.Count

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script src="~/js/persianDatepicker.js"></script>
        <script type="text/javascript">
            $(function () {
                $("#input1, #input2").persianDatepicker(
                    {
                        cellWidth: 30,
                        cellHeight: 30,
                        fontSize: 14,

                        onSelect: function () {

                            let from = $("#input1").attr("data-gdate");
                            let to = $("#input2").attr("data-gdate");
                            $("#from").val(from);
                            $("#to").val(to);
                        }
                    }
                );
            });
        </script>

    }
}


