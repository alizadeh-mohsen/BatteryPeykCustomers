@page
@model BatteryPeykCustomers.Pages.Admin.Useds.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<p>
    <a class="btn btn-primary" asp-page="Create">
        <i class="bi bi-plus-square ms-2"></i> داغی جدید
    </a>
</p>


<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title text-center">داغی ها</h5>
            <p class="card-text">
                <strong>
                    تعداد:
                </strong>
                <span>
                    @Model.Used.Quantity
                </span>
            </p>
            <p>
                <strong>
                    آمپر:
                </strong>
                <span> @Model.Used.Amperage.ToString("N0")</span>
            </p>
            <div class="d-flex justify-content-end">
                <a asp-page="./Edit" asp-route-id="@Model.Used.Id" style="text-decoration:none"> <i class="bi bi-pencil-square ms-2" style="font-size:1.5rem"></i> </a> &nbsp;

                <form method="post" asp-page-handler="Reset" class="ms-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Used.Id" />
                    <button type="submit" class="btn btn-sm btn-danger" >ریست
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
