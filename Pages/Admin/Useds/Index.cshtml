@page
@model BatteryPeykCustomers.Pages.Admin.Useds.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<p>
    <a class="btn btn-primary" asp-page="Create">
        <i class="bi bi-plus-square ms-2"></i> داغی جدید
    </a>
</p>


<div class="d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title text-center">داغی ها</h5>
            <p class="card-text">
                <strong>
                    تعداد:
                </strong>
                <span>
                    @Model.Used.Quantity
                </span>
            </p>
            <p>
                <strong>
                    آمپر:
                </strong>
                    <span> @Model.Used.Amperage.ToString("N0")</span>
            </p>
            <div class="d-flex justify-content-end">
                <a asp-page="./Edit" asp-route-id="@Model.Used.Id" style="text-decoration:none"> <i class="bi bi-pencil-square ms-2" style="font-size:1.5rem"></i> </a> &nbsp;
                <a asp-page="./Delete" asp-route-id="@Model.Used.Id" style="text-decoration:none" class="text-danger"><i class="bi bi-trash-fill ms-2" style="font-size:1.5rem"></i> </a> &nbsp;
                <a asp-page="./Details" asp-route-id="@Model.Used.Id" style="text-decoration:none" class="text-primary"><i class="bi bi-primary-square-fill" style="font-size:1.5rem"></i> </a>
            </div>
        </div>
    </div>
</div>
