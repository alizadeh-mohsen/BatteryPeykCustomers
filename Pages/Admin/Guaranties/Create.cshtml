@page
@model BatteryPeykCustomers.Pages.Admin.Guaranties.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                آمپر
                <select asp-for="Guarranty.AmperId" class ="form-select" asp-items="ViewBag.AmperId"></select>
            </div>
            <div class="form-group">
                باتری
                <select asp-for="Guarranty.CompanyId" class ="form-select" asp-items="ViewBag.CompanyId"></select>
            </div>
           
            <div class="form-group mb-2">
                <input type="submit" value="ذخیره" class="btn btn-primary mt-2" />
                <a asp-page="./Index" class="btn btn-primary mt-2">بازگشت</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
