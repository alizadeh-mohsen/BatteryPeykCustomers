@page
@model BatteryPeykCustomers.Pages.Admin.Expenses.CreateModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                تاریخ
                <input asp-for="Expense.Date" class="form-control" />
                <span asp-validation-for="Expense.Date" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                طرف حساب
                <select asp-for="Expense.CounterpartyId" class="form-select" asp-items="ViewBag.CounterpartyId"></select>
            </div>
            <div class="form-group mb-2">
                بابت
                <select asp-for="Expense.ReasonId" class="form-select" asp-items="ViewBag.ReasonId"></select>
            </div>
            <div class="form-group mb-2">
                مبلغ
                <input asp-for="Expense.Amount" class="form-control" />
                <span asp-validation-for="Expense.Amount" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                توضیحات
                <textarea asp-for="Expense.Description" class="form-control" ></textarea>
                <span asp-validation-for="Expense.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <div class="form-group mb-2">
                    <input type="submit" value="ذخیره" class="btn btn-info mt-2" />
                    <a asp-page="./Index" class="btn btn-success mt-2">بازگشت</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
