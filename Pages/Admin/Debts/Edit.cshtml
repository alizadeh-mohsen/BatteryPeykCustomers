@page
@model BatteryPeykCustomers.Pages.Admin.Debts.EditModel

@{
    ViewData["Title"] = "Edit";
    string dateNow = DateTime.Now.ToString("dd/MM/yyyy");
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Debt.Id" />
            <div class="form-group mb-2">
                طرف حساب
                <select asp-for="Debt.CounterpartyId" class="form-select" asp-items="ViewBag.CounterpartyId">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group mb-2">
                بابت
                <select asp-for="Debt.ReasonId" class="form-select" asp-items="ViewBag.ReasonId">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group mb-2">
                بابت
                <select asp-for="Debt.ReasonId" class="form-control" asp-items="ViewBag.ReasonId"></select>
                <span asp-validation-for="Debt.ReasonId" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                مبلغ
                <input asp-for="Debt.Amount" class="form-control" />
                <lable id="amount"></lable>

            </div>   
            @* <div class="form-group mb-2">
                تاریخ سررسید
                <input asp-for="Debt.DueDate" id="From_Date" value="@dateNow" type="date" class="form-control" />
                <span asp-validation-for="Debt.DueDate" class="text-danger"></span>
            </div> *@
            <div class="form-group mb-2">
                توضیحات
                <input asp-for="Debt.Description" class="form-control" />

            </div>
        
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Debt.Settled" />تسویه شد
                </label>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="ذخیره" class="btn btn-info mt-2" />
                <a asp-page="./Index" class="btn btn-success mt-2">بازگشت</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
