@page
@model BatteryPeykCustomers.Pages.Admin.Debts.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            تاریخ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Debt.Date)
        </dd>
        <dt class="col-sm-2">
            طرف حساب
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Debt.Counterparty.Title)
        </dd>
        <dt class="col-sm-2">
            بابت
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Debt.Reason.Title)
        </dd>
        <dt class="col-sm-2">
            مبلغ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Debt.Amount)
        </dd>
        <dt class="col-sm-2">
            توضیحات
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Debt.Description)
        </dd>
        <dt class="col-sm-2">
            تاریخ سررسید
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Debt.DueDate)
        </dd>
        <dt class="col-sm-2">
            تسویه شده
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Debt.Settled)
        </dd>


    </dl>
</div>
<div>
    <a class="btn btn-info ml-2" asp-page="./Edit" asp-route-id="@Model.Debt.Id">ویرایش</a>
    <a class="btn btn-success ml-2" asp-page="./Index">بازگشت</a>
</div>
