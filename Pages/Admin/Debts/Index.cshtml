@page
@using System.Globalization
@using BatteryPeykCustomers.Helpers
@model BatteryPeykCustomers.Pages.Admin.Debts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex flex-row mb-2">
    <div class="ms-3">
        <a class="btn btn-primary" asp-page="Create">
            <i class="bi bi-plus-square ms-2"></i>بدهی جدید
        </a>
    </div>
    <div>
        جمع بدهی ها:
        <strong class="text-danger">
            @Model.TotalDebit.ToString("N0")
        </strong>
        تومان
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm-4">
        <form>
            <div>
                <input type="text" class="form-control mb-1" asp-for="SearchCommentString" id="Desc" placeholder="توضیحات" />
            </div>

            <button type="submit" class="btn btn-primary mt-2"><i class="bi bi-search ms-2"></i>جستجو</button>

        </form>
    </div>
</div>
<table class="table table-sm table-striped">

    <thead>
        <tr>
            <th>
                تاریخ
            </th>
            @*  <th>
                طرف حساب
                </th>
                <th>
                بابت
                </th> *@
            <th>
                مبلغ
            </th>
            <th>
                توضیحات
            </th>@*  <th>
                تاریخ سررسید
                </th>
                <th>
                تسویه شده
                </th> *@


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Debts)
        {
            <tr>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                @* <td>
                @Html.DisplayFor(modelItem => item.Counterparty.Title)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Reason.Title)
                </td> *@
                <td>
                    @item.Amount.ToString("N0")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*   <td>
                @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.Settled)
                </td> *@


                <td class="text-center">
                    <a asp-page="./Edit" asp-route-id="@item.Id" style="text-decoration:none"> <i class="bi bi-pencil-square ms-2" style="font-size:1.5rem"></i> </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" style="text-decoration:none" class="text-danger"><i class="bi bi-check-square ms-2" style="font-size:1.5rem"></i> </a>
                    &nbsp; &nbsp;
                    <a asp-page="./Details" asp-route-id="@item.Id" style="text-decoration:none" class="text-primary"><i class="bi bi-primary-square-fill" style="font-size:1.5rem"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>
