@page
@model BatteryPeykCustomers.Pages.Admin.Batteries.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <dl class="row">
        <dt class="col-sm-2">
            باتری
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Battery.Company.Title)
        </dd>
        <dt class="col-sm-2">
            آمپر
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Battery.Amper.Title)
        </dd>
        <dt class="col-sm-2">
            سود
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Battery.Profit)
        </dd>
        <dt class="col-sm-2">
            تعداد
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Battery.Quantity)
        </dd>
        <dt class="col-sm-2">
            حد نصاب هشدار موجودی
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Battery.AlertQuantity)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info ml-2" asp-page="./Edit" asp-route-id="@Model.Battery.Id">ویرایش</a>
    <a class="btn btn-success ml-2" asp-page="./Index">بازگشت</a>
</div>
