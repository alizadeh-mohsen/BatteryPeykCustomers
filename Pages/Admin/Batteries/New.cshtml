@page
@model BatteryPeykCustomers.Pages.Admin.Batteries.NewModel

@{
    ViewData["Title"] = "New";
 
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                باتری
                <select asp-for="Battery.CompanyId" class="form-select" asp-items="ViewBag.CompanyId"><option value=""></option></select>
            </div>
            <div class="form-group mb-2">
                آمپر
                <select asp-for="Battery.AmperId" class="form-select" asp-items="ViewBag.AmperId"><option value=""></option></select>
            </div>
            <div class="form-group mb-2">
               تعداد ورود
                <input asp-for="Battery.Quantity" class="form-control" />
                <span asp-validation-for="Battery.Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <input type="submit" value="ذخیره" class="btn btn-info mt-2" />
                <a asp-page="./Index" class="btn btn-success mt-2">بازگشت</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#numberInput').on('input', function () {
                var value = $(this).val();
                value = value.replace(/,/g, ''); // Remove existing commas
                if (!isNaN(value) && value !== '') {
                    value = parseFloat(value).toLocaleString('en-US');
                }
                $('#amount').text(value);
            });
        });
    </script>
}
