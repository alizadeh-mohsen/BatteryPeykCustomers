<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BatteryPeykCustomers</title>
    <link rel="icon" href="~/images/favicon.jpeg" type="image/jpeg" />
    <link rel="canonical" href="https://BatteryPeyk.com/borna-battery.html" />
    <link rel="stylesheet" href="~/css/bootswatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BatteryPeykCustomers.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav dir="rtl" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                @* <a class="navbar-brand"  asp-page="/Index">پنل مدیریت مشتریان باتری پیک</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 ">

                        @if (User != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light " asp-page="/Admin/Customers/Index">مشتریان</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Customers/Expire">تعویضی ها</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Batteries/Index">انبار</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Useds/Index">داغی ها</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Guaranties/Index">گارانتی ها</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Profits/Index">درآمد ها</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Expenses/Index">هزینه ها</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Debts/Index">بدهکاران</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Credits/Index">اعتبار خرید</a>
                            </li>


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    گزارشات
                                </a>
                                <ul class="dropdown-menu bg-primary" aria-labelledby="navbarDropdown">


                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Report/Index">گزارش سود</a>
                                    </li>

                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Report/Sales">گزارش فروش</a>
                                    </li>

                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Report/DailyTotals">گزارش فروش روزانه </a>
                                    </li>
                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Report/Used">گزارش داغی ها </a>
                                    </li>
                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Report/Batteries">گزارش انبار </a>
                                    </li>
                                </ul>
                            </li>


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    اطلاعات پایه
                                </a>
                                <ul class="dropdown-menu bg-primary" aria-labelledby="navbarDropdown">

                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Ampers/Index">آمپرها</a>

                                    </li>
                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Brands/Index">برندها</a>

                                    </li>
                                    <li style="text-align:right">
                                        <a class="dropdown-item text-light" asp-page="/Admin/Vehicles/Index">ماشین ها</a>

                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Admin/Sms/Index">تست اس ام اس</a>
                            </li>



                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" dir="rtl">
        <main role="main" class="pb-3">
            <partial name="_Notification" />

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light bg-primary text-center">
        <div class="container">

            <a class="ms-2 text-decoration-none" href="https://BatteryPeyk.com">باتری پیک </a>
            -
            <span class="me-2 text-light">با مدیریت علیرضا رنجبر</span>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>