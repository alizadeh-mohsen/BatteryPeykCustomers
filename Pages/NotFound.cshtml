@page
@model BatteryPeykCustomers.Pages.NotFoundModel
@{
}
@{
    ViewData["Title"] = "Create";
}

<div dir="rtl">
<h5 class="text-center" >ورود به پنل مشتریان VIP باتری پیک</h5>

<div class="row">
    <div class="col-lg-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserPhone.PhoneNumber" class="control-label">شماره موبایل</label> 
                <input asp-for="UserPhone.PhoneNumber" class="form-control" style="text-align:left" placeholder="09123456789" />
